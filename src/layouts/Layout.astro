---
// Propiedades para el layout
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title?: string;
}

// Determinar el idioma basado en la URL
const { pathname } = Astro.url;
const isSpanish = pathname.startsWith("/es/");
const lang = isSpanish ? "es" : "en";

// TÃ­tulo predeterminado si no se proporciona uno especÃ­fico
const {
  title = isSpanish
    ? "SIMG - Seminario de InvestigaciÃ³n en Inteligencia Artificial"
    : "SIMG - Artificial Intelligence Research Seminar",
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    
    <!-- Script para prevenir flash de tema incorrecto (FOUC) - DEBE IR PRIMERO -->
    <script is:inline>
      // Ejecutar inmediatamente antes de que se cargue cualquier cosa
      (function() {
        const theme = localStorage.getItem('theme');
        const html = document.documentElement;
        
        if (theme === 'light') {
          html.classList.add('light-mode');
          // Agregar a body cuando estÃ© disponible
          if (document.body) {
            document.body.classList.add('light-mode');
          } else {
            document.addEventListener('DOMContentLoaded', function() {
              document.body.classList.add('light-mode');
            });
          }
        }
      })();
    </script>
    
    <link rel="icon" type="image/x-icon" href="/images/website/SIMG_LOGO.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Agregar informaciÃ³n para SEO y social media -->
    <meta
      name="description"
      content={isSpanish
        ? "Seminario de InvestigaciÃ³n en Aprendizaje AutomÃ¡tico de la Universidad Nacional de Colombia"
        : "Image and Machine Learning Research Seminar at the National University of Colombia"}
    />
    <!-- Enlace para alternar idiomas para SEO -->
    <link
      rel="alternate"
      hreflang={isSpanish ? "en" : "es"}
      href={isSpanish
        ? `https://simg-seminar.com${pathname.replace("/es", "")}`
        : `https://simg-seminar.com/es${pathname}`}
    />

    <!-- Permitir insertar elementos adicionales en el head desde los componentes hijo -->
    <slot name="head" />
  </head>
  <body>
    <!-- Incluir el encabezado con selector de idioma -->
    <slot name="header">
      <!-- Se importa el encabezado que tiene el selector de idioma -->
      <div id="header-placeholder"></div>
    </slot>

    <!-- Contenido principal -->
    <slot />

    <!-- Incluimos el componente Footer para redes sociales y RSS -->
    <slot name="footer">
      <Footer />
    </slot>

    <!-- Footer legal con copyright -->
    <footer class="legal-footer">
      <p>
        Â© {new Date().getFullYear()} SIMG - {
          isSpanish
            ? "Universidad Nacional de Colombia"
            : "National University of Colombia"
        }
      </p>
    </footer>

    <!-- WhatsApp floating button -->
    <a
      href={`https://wa.me/573217098173?text=${encodeURIComponent(
        isSpanish
          ? "Â¡Hola! Tengo una pregunta sobre el Seminario SIMG ðŸ¢"
          : "Hi! I have a question about the SIMG Seminar ðŸ¢"
      )}`}
      class="whatsapp-fab"
      target="_blank"
      rel="noopener noreferrer"
      aria-label={isSpanish ? "ContÃ¡ctanos por WhatsApp" : "Contact us on WhatsApp"}
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="28" height="28" fill="white" aria-hidden="true">
        <!-- Font Awesome WhatsApp icon -->
        <path d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222 0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.4 17.7 68.9 27 106.1 27h.1c122.3 0 224.1-99.6 224.1-222 0-59.3-25.2-115-67.1-157zm-157 341.6c-33.2 0-65.7-8.9-94-25.7l-6.7-4-69.8 18.3L72 359.2l-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2 0-101.7 82.8-184.5 184.6-184.5 49.3 0 95.6 19.2 130.4 54.1 34.8 34.9 56.2 81.2 56.1 130.5 0 101.8-84.9 184.6-186.6 184.6zm101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18-5.1-1.9-8.8-2.8-12.5 2.8-3.7 5.6-14.3 18-17.6 21.8-3.2 3.7-6.5 4.2-12 1.4-32.6-16.3-54-29.1-75.5-66-5.7-9.8 5.7-9.1 16.3-30.3 1.8-3.7.9-6.9-.5-9.7-1.4-2.8-12.5-30.1-17.1-41.2-4.5-10.8-9.1-9.3-12.5-9.5-3.2-.2-6.9-.2-10.6-.2-3.7 0-9.7 1.4-14.8 6.9-5.1 5.6-19.4 19-19.4 46.3 0 27.3 19.9 53.7 22.6 57.4 2.8 3.7 39.1 59.7 94.8 83.8 35.2 15.2 49 16.5 66.6 13.9 10.7-1.6 32.8-13.4 37.4-26.4 4.6-13 4.6-24.1 3.2-26.4-1.3-2.5-5-3.9-10.5-6.6z"/>
      </svg>
      <span class="whatsapp-fab__label">
        {isSpanish ? "Â¿Preguntas?" : "Questions?"}
      </span>
    </a>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  .legal-footer {
    text-align: center;
    padding: 1rem 0;
    background-color: #f2f2f2;
    font-size: 0.9rem;
    color: #555;
    border-top: 1px solid #ddd;
  }

  /* â”€â”€ WhatsApp floating action button â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .whatsapp-fab {
    position: fixed;
    bottom: 1.75rem;
    right: 1.75rem;
    z-index: 9999;
    display: flex;
    align-items: center;
    gap: 0;
    background-color: #25D366;
    color: white;
    text-decoration: none;
    border-radius: 50px;
    padding: 0.8rem;
    box-shadow: 0 4px 16px rgba(37, 211, 102, 0.45);
    transition: transform 0.2s ease, box-shadow 0.2s ease, padding 0.2s ease;
  }

  .whatsapp-fab:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(37, 211, 102, 0.55);
    padding: 0.8rem 1.1rem 0.8rem 0.9rem;
    gap: 0.5rem;
  }

  .whatsapp-fab__label {
    font-family: Arial, sans-serif;
    font-size: 0.88rem;
    font-weight: 600;
    white-space: nowrap;
    max-width: 0;
    overflow: hidden;
    opacity: 0;
    transition: max-width 0.25s ease, opacity 0.15s ease 0.05s;
    pointer-events: none;
  }

  .whatsapp-fab:hover .whatsapp-fab__label {
    max-width: 8rem;
    opacity: 1;
  }

  @media (max-width: 480px) {
    .whatsapp-fab {
      bottom: 1.25rem;
      right: 1.25rem;
    }
    .whatsapp-fab:hover {
      padding: 0.8rem;
      gap: 0;
    }
    .whatsapp-fab:hover .whatsapp-fab__label {
      max-width: 0;
      opacity: 0;
    }
  }
</style>
