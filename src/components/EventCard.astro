---
/**
 * EventCard.astro - Reusable event card component for the Events page.
 * Supports in-person, virtual, and hybrid event types with:
 *   - Thumbnail/banner image
 *   - Event type badge
 *   - Google Calendar "Add to Calendar" link
 *   - Meeting link (for virtual/hybrid)
 *   - Share buttons (LinkedIn, WhatsApp, Copy Link)
 *   - Resource links (slides, recordings, code, etc.)
 */
import type { CollectionEntry } from 'astro:content';

interface Props {
  event: CollectionEntry<'events'>;
}

const { event } = Astro.props;
const {
  title,
  description,
  speaker,
  date,
  time,
  duration,
  eventType,
  location,
  building,
  room,
  meetingLink,
  meetingPlatform,
  googleCalendarLink,
  thumbnail,
  banner,
  resources,
  recordingUrl,
  tags,
  status,
  lang,
  participants,
} = event.data;

const isSpanish = lang === 'es';
const locale = isSpanish ? 'es-ES' : 'en-US';

const formattedDate = new Intl.DateTimeFormat(locale, {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(date);

// Build Google Calendar link dynamically if not provided
function buildGoogleCalendarUrl() {
  if (googleCalendarLink) return googleCalendarLink;
  const startDate = new Date(date);
  const timeParts = time.split(' - ');
  if (timeParts.length === 2) {
    const startTime = parseTime(timeParts[0].trim());
    const endTime = parseTime(timeParts[1].trim());
    if (startTime && endTime) {
      const startDt = new Date(startDate);
      startDt.setHours(startTime.hours, startTime.minutes, 0);
      const endDt = new Date(startDate);
      endDt.setHours(endTime.hours, endTime.minutes, 0);
      const fmt = (d: Date) => d.toISOString().replace(/[-:]/g, '').replace(/\.\d{3}/, '');
      const locationStr = eventType === 'virtual' && meetingLink
        ? meetingLink
        : [room, building, location].filter(Boolean).join(', ');
      return `https://calendar.google.com/calendar/render?action=TEMPLATE&text=${encodeURIComponent(title)}&dates=${fmt(startDt)}/${fmt(endDt)}&details=${encodeURIComponent(description)}&location=${encodeURIComponent(locationStr)}&sf=true&output=xml`;
    }
  }
  return null;
}

function parseTime(str: string) {
  const match = str.match(/^(\d{1,2}):(\d{2})\s*(AM|PM)$/i);
  if (!match) return null;
  let hours = parseInt(match[1]);
  const minutes = parseInt(match[2]);
  const period = match[3].toUpperCase();
  if (period === 'PM' && hours !== 12) hours += 12;
  if (period === 'AM' && hours === 12) hours = 0;
  return { hours, minutes };
}

const calendarUrl = buildGoogleCalendarUrl();

// Share URLs - extract filename without language prefix
const eventSlug = event.id.replace(`${lang}/`, '').replace('.md', '');
const eventUrl = `https://simg-seminar.com/${lang}/events/${eventSlug}`;
const shareText = isSpanish
  ? `üê¢ Evento SIMG: "${title}" ‚Äî ${formattedDate}. ¬°√önete! ${eventUrl}`
  : `üê¢ SIMG Event: "${title}" ‚Äî ${formattedDate}. Join us! ${eventUrl}`;

const whatsappLink = `https://api.whatsapp.com/send?text=${encodeURIComponent(shareText)}`;
const linkedinLink = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(eventUrl)}`;
const twitterLink = `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}`;

const eventTypeLabels: Record<string, Record<string, string>> = {
  'in-person': { en: 'In-Person', es: 'Presencial' },
  'virtual': { en: 'Virtual', es: 'Virtual' },
  'hybrid': { en: 'Hybrid', es: 'H√≠brido' },
};

const statusLabels: Record<string, Record<string, string>> = {
  'upcoming': { en: 'Upcoming', es: 'Pr√≥ximo' },
  'live': { en: 'Live Now', es: 'En Vivo' },
  'completed': { en: 'Completed', es: 'Completado' },
  'cancelled': { en: 'Cancelled', es: 'Cancelado' },
};

const imgSrc = thumbnail || banner || '/images/website/SIMG_LOGO.jpg';
---

<article class={`event-card ${status}`} id={event.slug}>
  <!-- Thumbnail -->
  <div class="card-thumbnail">
    <img src={imgSrc} alt={title} loading="lazy" />
    <div class="card-badges">
      <span class={`badge badge-type badge-${eventType}`}>
        {eventTypeLabels[eventType]?.[lang] || eventType}
      </span>
      <span class={`badge badge-status badge-${status}`}>
        {statusLabels[status]?.[lang] || status}
      </span>
    </div>
    {duration && (
      <span class="badge-duration">{duration}</span>
    )}
  </div>

  <!-- Content -->
  <div class="card-body">
    <p class="card-date">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
      {formattedDate} ¬∑ {time}
    </p>

    <a href={`/${lang}/events/${eventSlug}`} class="card-title-link">
      <h3 class="card-title">{title}</h3>
    </a>

    <p class="card-speaker">
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
      {speaker}
    </p>

    {eventType !== 'virtual' && (building || room) && (
      <p class="card-location">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
        {[room, building].filter(Boolean).join(' ‚Äî ')}
      </p>
    )}

    <!-- Tags -->
    <div class="card-tags">
      {tags.map((tag: string) => <span class="tag">{tag}</span>)}
    </div>

    <!-- Action Buttons -->
    <div class="card-actions">
      {calendarUrl && (
        <a href={calendarUrl} target="_blank" rel="noopener noreferrer" class="action-btn calendar-btn" title={isSpanish ? 'Agregar a Google Calendar' : 'Add to Google Calendar'}>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line><line x1="12" y1="14" x2="12" y2="18"></line><line x1="10" y1="16" x2="14" y2="16"></line></svg>
          {isSpanish ? 'Calendario' : 'Calendar'}
        </a>
      )}

      {meetingLink && (eventType === 'virtual' || eventType === 'hybrid') && (
        <a href={meetingLink} target="_blank" rel="noopener noreferrer" class="action-btn meeting-btn" title={isSpanish ? 'Unirse a la reuni√≥n' : 'Join Meeting'}>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="23 7 16 12 23 17 23 7"></polygon><rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect></svg>
          {isSpanish ? 'Unirse' : 'Join'}
        </a>
      )}

      {recordingUrl && (
        <a href={recordingUrl} target="_blank" rel="noopener noreferrer" class="action-btn recording-btn" title={isSpanish ? 'Ver grabaci√≥n' : 'Watch Recording'}>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"></path></svg>
          {isSpanish ? 'Grabaci√≥n' : 'Recording'}
        </a>
      )}
    </div>

    {resources && resources.length > 0 && (
      <div class="card-resources">
        <p class="resources-label">{isSpanish ? 'Recursos:' : 'Resources:'}</p>
        <div class="resources-list">
          {resources.map((r: { name: string; url: string; type?: string }) => (
            <a href={r.url} target="_blank" rel="noopener noreferrer" class="resource-link">
              {r.name}
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Share Buttons -->
    <div class="card-footer">
      <span class="share-label">{isSpanish ? 'Compartir:' : 'Share:'}</span>
      <div class="share-buttons">
        <a href={whatsappLink} target="_blank" rel="noopener noreferrer" title="WhatsApp" class="share-btn share-whatsapp">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
        </a>
        <a href={linkedinLink} target="_blank" rel="noopener noreferrer" title="LinkedIn" class="share-btn share-linkedin">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.225 0z"/></svg>
        </a>
        <a href={twitterLink} target="_blank" rel="noopener noreferrer" title="X / Twitter" class="share-btn share-twitter">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
        </a>
        <button class="share-btn share-copy copy-link-btn" title={isSpanish ? 'Copiar enlace' : 'Copy link'} data-url={eventUrl} data-text={shareText}>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>
        </button>
      </div>
    </div>
  </div>
</article>

<script>
  document.querySelectorAll('.copy-link-btn').forEach(button => {
    button.addEventListener('click', (e) => {
      const btn = e.currentTarget as HTMLButtonElement;
      const url = btn.dataset.url;
      if (!url) return;
      navigator.clipboard.writeText(url).then(() => {
        btn.classList.add('copied');
        setTimeout(() => btn.classList.remove('copied'), 2000);
      });
    });
  });
</script>

<style>
  .event-card {
    background: linear-gradient(135deg, rgba(18, 35, 52, 0.95) 0%, rgba(12, 26, 38, 0.98) 100%);
    border: 1px solid rgba(244, 197, 66, 0.15);
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .event-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 16px 40px rgba(244, 197, 66, 0.2), 0 4px 12px rgba(0,0,0,0.3);
    border-color: rgba(244, 197, 66, 0.4);
  }

  .event-card.completed { opacity: 0.8; }
  .event-card.cancelled { opacity: 0.5; filter: grayscale(50%); }

  /* Thumbnail */
  .card-thumbnail {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: linear-gradient(135deg, #0C1A26, #142B3B);
  }

  .card-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .event-card:hover .card-thumbnail img {
    transform: scale(1.05);
  }

  .card-badges {
    position: absolute;
    top: 12px;
    left: 12px;
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .badge {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    backdrop-filter: blur(8px);
  }

  .badge-in-person { background: rgba(46, 109, 180, 0.85); color: #fff; }
  .badge-virtual { background: rgba(95, 163, 106, 0.85); color: #fff; }
  .badge-hybrid { background: rgba(244, 197, 66, 0.85); color: #0C1A26; }
  .badge-upcoming { background: rgba(244, 197, 66, 0.9); color: #0C1A26; }
  .badge-live { background: rgba(239, 68, 68, 0.9); color: #fff; animation: pulse 2s infinite; }
  .badge-completed { background: rgba(107, 114, 128, 0.85); color: #fff; }
  .badge-cancelled { background: rgba(239, 68, 68, 0.7); color: #fff; }

  .badge-duration {
    position: absolute;
    bottom: 12px;
    right: 12px;
    background: rgba(0, 0, 0, 0.75);
    color: #F4C542;
    padding: 4px 10px;
    border-radius: 8px;
    font-size: 0.8rem;
    font-weight: 600;
    backdrop-filter: blur(4px);
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }

  /* Body */
  .card-body {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    gap: 0.5rem;
  }

  .card-date {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.85rem;
    color: #F4C542;
    font-weight: 600;
    margin: 0;
  }
  .card-date svg { flex-shrink: 0; color: #F4C542; }

  .card-title-link {
    text-decoration: none;
    color: inherit;
    display: block;
    transition: transform 0.2s ease;
  }

  .card-title-link:hover {
    transform: translateX(4px);
  }

  .card-title-link:hover .card-title {
    color: #F4C542;
  }

  .card-title {
    font-size: 1.15rem;
    font-weight: 700;
    color: #E6E9EF;
    margin: 0.25rem 0;
    line-height: 1.35;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color 0.2s ease;
  }

  .card-speaker, .card-location {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.9rem;
    color: #A8B3C3;
    margin: 0;
  }
  .card-speaker svg, .card-location svg { flex-shrink: 0; color: #A8B3C3; }

  /* Tags */
  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 0.5rem;
  }

  .tag {
    background: rgba(46, 109, 180, 0.2);
    color: #93c5fd;
    padding: 3px 10px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    border: 1px solid rgba(46, 109, 180, 0.3);
  }

  /* Action buttons */
  .card-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 0.75rem;
  }

  .action-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.25s ease;
    cursor: pointer;
    border: none;
  }

  .calendar-btn {
    background: rgba(244, 197, 66, 0.15);
    color: #F4C542;
    border: 1px solid rgba(244, 197, 66, 0.3);
  }
  .calendar-btn:hover { background: rgba(244, 197, 66, 0.3); transform: translateY(-1px); }

  .meeting-btn {
    background: rgba(95, 163, 106, 0.15);
    color: #86efac;
    border: 1px solid rgba(95, 163, 106, 0.3);
  }
  .meeting-btn:hover { background: rgba(95, 163, 106, 0.3); transform: translateY(-1px); }

  .recording-btn {
    background: rgba(239, 68, 68, 0.15);
    color: #fca5a5;
    border: 1px solid rgba(239, 68, 68, 0.3);
  }
  .recording-btn:hover { background: rgba(239, 68, 68, 0.3); transform: translateY(-1px); }

  /* Resources */
  .card-resources {
    margin-top: 0.5rem;
    padding-top: 0.5rem;
    border-top: 1px solid rgba(244, 197, 66, 0.1);
  }

  .resources-label {
    font-size: 0.8rem;
    color: #A8B3C3;
    margin: 0 0 6px 0;
    font-weight: 600;
  }

  .resources-list { display: flex; flex-wrap: wrap; gap: 6px; }

  .resource-link {
    display: inline-block;
    padding: 3px 10px;
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 500;
    color: #93c5fd;
    background: rgba(46, 109, 180, 0.1);
    text-decoration: none;
    border: 1px solid rgba(46, 109, 180, 0.2);
    transition: all 0.2s ease;
  }
  .resource-link:hover { background: rgba(46, 109, 180, 0.25); color: #bfdbfe; }

  /* Footer / Share */
  .card-footer {
    margin-top: auto;
    padding-top: 0.75rem;
    border-top: 1px solid rgba(244, 197, 66, 0.1);
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .share-label {
    font-size: 0.8rem;
    color: #7a8898;
    font-weight: 500;
  }

  .share-buttons {
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .share-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: 1px solid rgba(230, 233, 239, 0.15);
    background: rgba(230, 233, 239, 0.05);
    color: #A8B3C3;
    cursor: pointer;
    transition: all 0.25s ease;
    text-decoration: none;
    padding: 0;
  }

  .share-btn:hover { transform: translateY(-2px); }
  .share-whatsapp:hover { background: rgba(37, 211, 102, 0.2); border-color: rgba(37, 211, 102, 0.4); color: #25d366; }
  .share-linkedin:hover { background: rgba(10, 102, 194, 0.2); border-color: rgba(10, 102, 194, 0.4); color: #0a66c2; }
  .share-twitter:hover { background: rgba(29, 161, 242, 0.2); border-color: rgba(29, 161, 242, 0.4); color: #1da1f2; }
  .share-copy:hover { background: rgba(244, 197, 66, 0.2); border-color: rgba(244, 197, 66, 0.4); color: #F4C542; }
  .share-copy.copied { background: rgba(95, 163, 106, 0.3); border-color: rgba(95, 163, 106, 0.5); color: #86efac; }

  /* Light mode */
  :global(.light-mode) .event-card {
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    border-color: rgba(46, 109, 180, 0.2);
  }
  :global(.light-mode) .event-card:hover {
    box-shadow: 0 16px 40px rgba(46, 109, 180, 0.15), 0 4px 12px rgba(0,0,0,0.08);
    border-color: rgba(46, 109, 180, 0.4);
  }
  :global(.light-mode) .card-title { color: #1a202c; }
  :global(.light-mode) .card-speaker, :global(.light-mode) .card-location { color: #4a5568; }
  :global(.light-mode) .card-date { color: #b45309; }
  :global(.light-mode) .card-date svg { color: #b45309; }
