<script>
  // Script para manejar el menú móvil y los menús desplegables
  document.addEventListener("DOMContentLoaded", () => {
    // Elementos DOM
    const menuToggle = document.getElementById("menu-toggle");
    const mainNav = document.getElementById("main-nav");
    const body = document.body;
    const langButton = document.querySelector(".language-button");
    const langDropdown = document.querySelector(".language-dropdown-content");
    const themeToggle = document.getElementById("theme-toggle");

    console.log("Header script loaded", { langButton, langDropdown });

    // Función para manejar el cambio de tema
    if (themeToggle) {
      themeToggle.addEventListener("click", () => {
        const html = document.documentElement;
        const body = document.body;
        
        // Toggle en ambos elementos de manera sincronizada
        const isCurrentlyLight = html.classList.contains("light-mode");
        
        if (isCurrentlyLight) {
          // Cambiar a modo oscuro
          html.classList.remove("light-mode");
          body.classList.remove("light-mode");
          localStorage.setItem("theme", "dark");
          console.log("Theme changed to: dark");
        } else {
          // Cambiar a modo claro
          html.classList.add("light-mode");
          body.classList.add("light-mode");
          localStorage.setItem("theme", "light");
          console.log("Theme changed to: light");
        }
        
        // Forzar repaint para que los cambios se apliquen inmediatamente
        void html.offsetHeight;
      });
    }

    // Función para manejar el menú móvil
    if (menuToggle && mainNav) {
      menuToggle.addEventListener("click", () => {
        menuToggle.classList.toggle("active");
        mainNav.classList.toggle("active");
        body.classList.toggle("menu-open");
      });
    }

    // Manejador del selector de idioma solo para móvil (en desktop usa hover CSS)
    if (langButton && langDropdown) {
      // Solo en móvil, usar click
      if (window.innerWidth <= 768) {
        langButton.addEventListener("click", (e) => {
          e.preventDefault();
          e.stopPropagation();
          const isVisible = (langDropdown as HTMLElement).style.display === "block";
          (langDropdown as HTMLElement).style.display = isVisible ? "none" : "block";
          console.log("Language selector clicked (mobile), visible:", !isVisible);
        });
        
        // Cerrar cuando se haga click fuera (solo móvil)
        document.addEventListener("click", (e) => {
          const target = e.target as Node;
          if (!langButton.contains(target) && !langDropdown.contains(target)) {
            (langDropdown as HTMLElement).style.display = "none";
          }
        });
      }
      // En desktop, el hover CSS se encarga automáticamente
    }

    // Cerrar el menú móvil cuando se hace clic fuera
    document.addEventListener("click", (e) => {
      const target = e.target as Node;
      const isNavClick = mainNav && mainNav.contains(target);
      const isToggleClick = menuToggle && menuToggle.contains(target);

      if (
        window.innerWidth <= 768 &&
        mainNav &&
        mainNav.classList.contains("active") &&
        !isNavClick &&
        !isToggleClick
      ) {
        mainNav.classList.remove("active");
        menuToggle?.classList.remove("active");
        body.classList.remove("menu-open");
      }
    });

    // Ajustar al cambiar el tamaño de la ventana
    window.addEventListener("resize", () => {
      if (window.innerWidth > 768) {
        if (mainNav) mainNav.classList.remove("active");
        if (menuToggle) menuToggle.classList.remove("active");
        body.classList.remove("menu-open");
      }
    });
  });
</script>
