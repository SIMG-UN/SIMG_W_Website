// Script para determinar la ruta actual y el idioma
const currentPath = Astro.url.pathname;
const isSpanish = currentPath.startsWith("/es/");
const currentLanguage = isSpanish ? "es" : "en";

// Función para traducir la ruta entre idiomas
function getAlternateUrl(path: string, targetLang: string): string {
  const isSpanishPath = path.startsWith("/es/");
  const isEnglishPath = path.startsWith("/en/");
  const currentLang = isSpanishPath ? "es" : "en";

  if (currentLang === targetLang) return path;

  // Si cambiamos de español a inglés
  if (currentLang === "es" && targetLang === "en") {
    // Reemplazamos /es/ por /en/
    return path.replace("/es/", "/en/");
  }

  // Si cambiamos de inglés a español
  if (currentLang === "en" && targetLang === "es") {
    // Si estamos en la página principal
    if (path === "/") return "/es/";

    // Si la ruta comienza con /en/
    if (isEnglishPath) {
      return path.replace("/en/", "/es/");
    }

    // Para otras rutas en inglés, añadimos el prefijo /es
    return "/es" + path;
  }

  return path;
}
